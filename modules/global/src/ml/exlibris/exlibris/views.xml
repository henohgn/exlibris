<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="ml.exlibris.exlibris.entity.Book"
          name="book.browse">
        <property name="name"/>
        <property name="literatureType"
                  view="_minimal"/>
    </view>
    <view class="ml.exlibris.exlibris.entity.Book"
          name="book.edit">
        <property name="name"/>
        <property name="literatureType"
                  view="_minimal">
        </property>
        <property name="authors">
            <property name="firstName"/>
            <property name="middleName"/>
            <property name="lastName"/>
        </property>
        <property name="categories"
                  view="_local"/>
    </view>
    <view class="ml.exlibris.exlibris.entity.BookInstance"
          name="bookInstance.browse">
        <property name="isReference"/>
        <property name="inventoryNumber"/>
        <property name="bookPublication">
            <property name="book"
                      view="_minimal"/>
        </property>
        <property name="libraryDepartment"
                  view="_minimal">
            <property name="name"/>
        </property>
    </view>
    <view class="ml.exlibris.exlibris.entity.BookInstance"
          name="bookInstance.edit">
        <property name="isReference"/>
        <property name="inventoryNumber"/>
        <property name="bookPublication">
            <property name="book"
                      view="_minimal"/>
        </property>
        <property name="libraryDepartment"
                  view="_minimal">
            <property name="name"/>
        </property>
    </view>
    <view class="ml.exlibris.exlibris.entity.BookInstance"
          name="bookInstance.accession">
        <property name="isReference"/>
        <property name="inventoryNumber"/>
        <property name="bookPublication">
            <property name="book"
                      view="_minimal"/>
        </property>
        <property name="libraryDepartment"
                  view="_minimal"/>
    </view>
    <view class="ml.exlibris.exlibris.entity.BookInstance"
          name="bookInstance.assignLibraryDepartment">
        <property name="isReference"/>
        <property name="inventoryNumber"/>
        <property name="libraryDepartment"
                  view="_minimal"/>
    </view>
    <view class="ml.exlibris.exlibris.entity.BookPublication"
          extends="_local"
          name="bookPublication.full">
        <property name="book"
                  view="_minimal"/>
        <property name="publisher"
                  view="_minimal"/>
        <property name="town"
                  view="_minimal"/>
    </view>
    <view class="ml.exlibris.exlibris.entity.Categories"
          extends="_local"
          name="categories-full">
        <property name="related"
                  view="_minimal"/>
        <property name="books"
                  view="_minimal"/>
    </view>
</views>
