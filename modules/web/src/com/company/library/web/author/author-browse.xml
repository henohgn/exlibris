<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ml.exlibris.exlibris.web.author.AuthorBrowse"
        focusComponent="authorsTable"
        lookupComponent="authorsTable"
        messagesPack="ml.exlibris.exlibris.web.author">
    <dsContext>
        <groupDatasource id="authorsDs"
                         class="ml.exlibris.exlibris.entity.Author"
                         view="_local">
            <query>
                <![CDATA[select e from library$Author e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="authorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="authorsTable"
                datasource="authorsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="authorsTable"
                    multiselect="true"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="middleName"/>
                <column id="lastName"/>
            </columns>
            <rows datasource="authorsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="authorsTable.create"/>
                <button id="editBtn"
                        action="authorsTable.edit"/>
                <button id="removeBtn"
                        action="authorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
