<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ml.exlibris.exlibris.web.librarydepartment.LibraryDepartmentBrowse"
        lookupComponent="libraryDepartmentTable"
        messagesPack="ml.exlibris.exlibris.web.librarydepartment">
    <dsContext>
        <collectionDatasource id="libraryDepartmentDs"
                              class="ml.exlibris.exlibris.entity.LibraryDepartment"
                              view="_local">
            <query>
                <![CDATA[select e from library$LibraryDepartment e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout spacing="true">
        <table id="libraryDepartmentTable"
               height="100%"
               multiselect="true"
               width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="libraryDepartmentDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="libraryDepartmentTable.create"/>
                <button id="editBtn"
                        action="libraryDepartmentTable.edit"/>
                <button id="removeBtn"
                        action="libraryDepartmentTable.remove"/>
                <button id="excelBtn"
                        action="libraryDepartmentTable.excel"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
